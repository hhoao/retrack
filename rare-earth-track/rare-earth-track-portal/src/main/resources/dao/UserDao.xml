<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.demo.rare_earth_track.dao.UserDao">
    <resultMap id="user" type="com.demo.rare_earth_track.bean.User">
        <id column="uid" property="id"/>
        <result column="name" property="name"/>
        <result column="sex" property="sex"/>
        <result column="age" property="age"/>
        <result column="birthday" property="birthday"/>
        <result column="address" property="address"/>
        <result column="password" property="password"/>

    </resultMap>
    <select id="getUserByName" resultMap="user">
        SELECT *  FROM user WHERE name=#{name};
    </select>
    <select id="getAllUsers" resultMap="user">
        SELECT * FROM user;
    </select>
    <insert id="addUser" parameterType="com.demo.rare_earth_track.bean.User">
        <selectKey resultType="java.lang.Integer" keyProperty="uid" keyColumn="uid" order="AFTER">
            SELECT LAST_INSERT_ID();
        </selectKey>
        INSERT INTO user(name, sex, age, birthday, address, password) VALUES(#{user.name}, #{user.sex}, #{user.age}, #{user.birthday}, #{user.address}, #{user.password});
    </insert>
</mapper>